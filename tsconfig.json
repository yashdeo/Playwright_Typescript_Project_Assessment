{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@fixtures": ["tests/UI/fixtures/allPageFixture"],
      "@pages/*": ["PageObjects/*"],
      "@tests/*": ["tests/*"],
      "@testdata/*" : ["testData/*"],
      "@utils/*": ["utilities/*"],
    },
    "types": ["@playwright/test"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
